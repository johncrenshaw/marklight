<SliderExample xmlns="MarkLight">
  <Group Orientation="Horizontal" Spacing="30" ContentAlignment="Bottom">
    <Group Orientation="Vertical">
      <Slider Id="Slider1" />
      <Label Text="{Slider1.Value:0} %" Width="100" TextAlignment="Center" />
      <Slider Id="Slider2" Steps="10" Min="0" Max="100" SlideStartStep="10" SlideRatePerSecond="0" />
      <Label Text="{Slider2.Value:0} %" Width="100" TextAlignment="Center" />
    </Group>
    <Group Orientation="Vertical">
      <Slider Id="Slider3" Orientation="Vertical" Min="20" Max="180" Value="50" SlideStartStep="1" SlideRatePerSecond="50" />
      <Label Text="{Slider3.Value:0.0}" Width="100" TextAlignment="Center" />
    </Group>
  </Group>
</SliderExample>